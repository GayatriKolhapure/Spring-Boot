<!--beans are the object managed by spring framework-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean definitions here -->

    <bean id="alien" class="org.gayatri.Alien">

        <constructor-arg ref="lap1" name="lap"/>
        <constructor-arg value="21" name="age"/>

    </bean>

    <bean id="lap" class="org.gayatri.Laptop">
    </bean>

    <bean id="lap1" class="org.gayatri.Laptop">
    </bean>


</beans>